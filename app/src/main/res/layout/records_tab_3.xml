<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя игрока:"
        android:id="@+id/tab3_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сыграл раз(а):"
        android:id="@+id/tab3_n"
        android:layout_alignBaseline="@id/tab3_name"
        android:layout_toRightOf="@id/tab3_name"
        android:layout_marginLeft="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Макс.очков:"
        android:id="@+id/tab3_max"
        android:layout_alignBaseline="@id/tab3_n"
        android:layout_toRightOf="@id/tab3_n"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Очков в сред."
        android:id="@+id/tab3_sred"
        android:layout_alignBaseline="@id/tab3_max"
        android:layout_toRightOf="@id/tab3_max"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/comingsoon"/>



</RelativeLayout>