<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mindgames.yzxi.mindgames.SettingsActivity"
    android:background="#C0C0C0">




            <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                android:id="@+id/rel1">

                <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Пользователи:"
            android:id="@+id/title_label"
            android:gravity="center_vertical"
            android:textSize="30sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="@android:color/darker_gray"
            android:layout_alignBottom="@id/title_label"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@id/separator"
                    android:text=" Добавить пользователя "
                    android:textSize="25sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:id="@+id/set_b2"
                    android:onClick="set_add"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@id/separator"
                    android:text=" Сбросить всё "
                    android:textSize="25sp"
                    android:layout_toLeftOf="@id/set_b2"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:onClick="set_clear"
                    />


            </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel1"
        android:layout_marginTop="70dp"
        android:id="@+id/set_rl">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/set_lv"


        >

    </ListView>


    </RelativeLayout>






</RelativeLayout>
