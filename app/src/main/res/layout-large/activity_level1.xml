<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mindgames.yzxi.mindgames.Level1.Level1Activity"
    android:orientation="vertical"
    android:background="@drawable/fon">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="Timer"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_gravity="right"
        android:layout_centerHorizontal="true"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        <TextView
        android:text="Slovo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/slovo1"
        />

    <TextView
        android:text="Slovo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:id="@+id/slovo2"
        android:layout_alignBaseline="@id/slovo1"
        android:layout_toRightOf="@id/slovo1"
        android:layout_marginLeft="50dp"
        />

        <TextView
        android:text="Slovo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:id="@+id/slovo3"
            android:layout_alignBaseline="@id/slovo1"
        android:layout_toRightOf="@+id/slovo2"
        android:layout_marginLeft="50dp"
        />
        <TextView
            android:text="Slovo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:id="@+id/slovo4"
            android:layout_alignBaseline="@id/slovo1"
            android:layout_toRightOf="@id/slovo3"
            android:layout_marginLeft="50dp"
            />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true">

        <TextView
            android:text="Slovo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/slovo5" />

        <TextView
            android:text="Slovo6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:id="@+id/slovo6"
            android:layout_alignBaseline="@id/slovo5"
            android:layout_toRightOf="@id/slovo5"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:text="Slovo7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:id="@+id/slovo7"
            android:textColor="@android:color/white"
            android:layout_alignBaseline="@id/slovo5"
            android:layout_toRightOf="@id/slovo6"
            android:layout_marginLeft="50dp"
            />
        <TextView
            android:text="Slovo8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:id="@+id/slovo8"
            android:layout_toRightOf="@id/slovo7"
            android:layout_marginLeft="50dp"
            android:layout_alignBaseline="@id/slovo5"
            />

       </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
