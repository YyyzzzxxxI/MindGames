<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.mindgames.yzxi.mindgames.MainActivity"
    android:background="#C0C0C0"
    >


    <VideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainAnim"
         />

    <Button
        android:text="Настройки"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/setting"
        android:visibility="invisible"
        android:background="@drawable/rounded"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:layout_above="@+id/records"
        android:layout_marginBottom="25dp"
        android:layout_alignLeft="@+id/records"
        android:onClick="openSettings"
        />

    <Button
        android:text="Играть"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/play"
        android:visibility="invisible"
        android:background="@drawable/rounded"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        android:onClick="play"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight ="true"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="140dp"
        android:typeface="serif"
        />

    <Button
        android:text="Музыка"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/music"
        android:visibility="invisible"
        android:background="@drawable/rounded"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:onClick="offMusic"
        android:layout_above="@+id/setting"
        android:layout_marginBottom="25dp"
        android:layout_alignLeft="@+id/setting"
         />

    <Button
        android:text="Рекорды"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/records"
        android:visibility="invisible"
        android:background="@drawable/rounded"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:layout_above="@+id/play"
        android:layout_alignLeft="@+id/play"
        android:layout_alignStart="@+id/play"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:onClick="openRecords"/>

    <TextView
        android:text="by YzxI v.1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/version"
        android:textSize="20dp"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headphones"
        android:src="@drawable/headphonesl"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"/>

</RelativeLayout>
